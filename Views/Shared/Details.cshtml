@using BusinessDevProject.Models



<form asp-controller="Home" asp-action="Details" method="get">
    <div>
        <h4>Details</h4>

    </div>
</form>  
<div class="container-fluid">
    @{

        if (Model != null)
        {
            foreach (var Data in Model)
            {
                <div class="flex-row">
                    <div class="col-sm">Title: @Data.Movie_Name</div>
                    <div class="col-sm">Director: @Data.Director_Name</div>
                    <div class="col-sm">Is Streamable: @Data.Streamable</div>
                </div>
                <div class="flex-row">
                    <div class="col-sm">Genre: @Data.Genre </div>
                    <div class="col-sm">Release Date: @Data.Release_Date </div>
                    <div class="col-sm">Duration: @Data.Duration minutes </div>
                </div>

            }
        }
    }
    <h5>Rate Movie?</h5>

    <div class="container">

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1star">
            <label class="form-check-label" for="inlineRadio1">1 Stars</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2star">
            <label class="form-check-label" for="inlineRadio2">2 Stars</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="3star">
            <label class="form-check-label" for="inlineRadio3">3 Stars</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="4star">
            <label class="form-check-label" for="inlineRadio3">4 Stars</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="5star">
            <label class="form-check-label" for="inlineRadio3">5 Stars</label>
        </div>
        <input type="submit" class="btn btn-info form-inline" value="Rate" />
    </div>
  



