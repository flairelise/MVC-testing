@{
    ViewData["Title"] = "Login";
}
<h2>@ViewData["Title"]</h2>

<div>
    <form asp-controller="Home" asp-action="Login" method="get">
        <div class="text-center">
            <div class="form-group">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="uname" required>

            </div>
            <div class="form-group">
                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" required>
                <small id="directorHelp" class="form-text text-muted">If you're a director and you've lost your password, contact system admins to recover your account.</small>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-info">Log In</button>
            </div>
            </div>
</form>
</div>

